
<header class="border-b bg-white shadow-sm" x-data="{ open: false }">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="text-xl font-bold text-blue-900 hover:text-blue-600">English for Kids</a>

        <!-- Botón Hamburguesa (visible solo en móviles) -->
        <button @click="open = !open" class="md:hidden text-blue-900 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>

        <!-- Navegación (desktop) -->
        <nav class="hidden md:flex space-x-6 text-sm font-medium">
            <a href="/" class="text-gray-700 hover:text-blue-600">Inicio</a>
            <a href="/metodologia" class="text-gray-700 hover:text-blue-600">Metodología</a>
            <a href="/contacto" class="text-gray-700 hover:text-blue-600">Contacto</a>
        </nav>
    </div>

    <!-- Menú móvil desplegable -->
    <div x-show="open" class="md:hidden px-6 pb-4 space-y-2" x-transition>
        <a href="/" class="block text-gray-700 hover:text-blue-600">Inicio</a>
        <a href="/metodologia" class="block text-gray-700 hover:text-blue-600">Metodología</a>
        <a href="/contacto" class="block text-gray-700 hover:text-blue-600">Contacto</a>
    </div>
</header>
